include 'transactions'
.modal.transactions.delete
	.modal-header.alert.alert-error
		h4 Delete
	-if(transaction.messages)
		ul.unstyled.alert.alert-error
			foreach transaction.messages as field
				li=field.message
	.modal-body
		strong
			| Are you sure you want to delete transaction
			| &nbsp;
			=transaction.transaction_account
			| &nbsp;
			=transaction.transaction_category		
			| ?
	.modal-footer
		.btn-group.pull-right
			button.delete.btn.btn-primary Delete
			button.cancel.btn Cancel